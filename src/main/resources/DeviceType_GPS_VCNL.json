{  
   "displayName":"APC Smart Containers fitted with GPS Ambience sensor",
   "deviceTypeId":"containerEnv",
   "protocol":"coap",
   "protocolHandler":"system:service:protocolHandler:coap-server",
   "sensors":[  
      {  
         "name":"GPSSensor",
         "dataSchemaId":"GPSSchema",

         "contentHandler":{ 
             "contentType": "json",
           "protocolProperties":{  
                 "uri":"Container/GPS"
           },    

            "contentMappings":[  
               {  
                  "fieldName":"longitude",
                  "expression":"$.GPS.longitude"
               },
               {  
                  "fieldName":"latitude",
                  "expression":"$.GPS.latitude"
               },
               {  
                  "fieldName":"altitude",
                  "expression":"$.GPS.altitude"
               },
               {  
                  "fieldName":"speed",
                  "expression":"$.GPS.speed"
               },
               {  
                  "fieldName":"course",
                  "expression":"$.GPS.course"
               }
            ]
         }
      },
      {  
         "name":"VCNLSensor",
         "dataSchemaId":"VCNLSchema",

         "contentHandler":{ 
             "contentType": "json",
           "protocolProperties":{  
                 "uri":"Container/VCNL"
           },    

            "contentMappings":[  
               {  
                  "fieldName":"ambience",
                  "expression":"$.VCNL.ambience"
               },
               {  
                  "fieldName":"proximity",
                  "expression":"$.VCNL.proximity"
               }
            ]
         }
      }
   ]
}